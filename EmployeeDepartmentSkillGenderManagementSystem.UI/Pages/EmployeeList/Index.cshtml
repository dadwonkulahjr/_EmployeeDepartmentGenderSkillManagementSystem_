@page
@model EmployeeDepartmentSkillGenderManagementSystem.UI.Pages.EmployeeList.IndexModel
@{
    ViewData["Title"] = "Employee List";
}

<h2 class="display-4 mt-2" style="font-size:7vw">
    Employee List<i class="oi oi-dashboard" style="font-size:40px"></i>
</h2>
<hr />
@if (Model.Employees.Any())
{
    <div class="row">
        <div class="ml-auto mb-2 mr-3"><a asp-page="Create" class="btn btn-outline-primary">Create new record</a></div>
    </div>
}
@if (Model.Employees.Any())
{
    <div class="row">
        <div class="col-sm-12">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Fullname</th>
                            <th>Email</th>
                            <th>Salary</th>
                            <th>Skill</th>
                            <th>Department</th>
                            <th>Date Hire</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model.Employees)
                        {
                            <partial name="_employeeIterationPartial" model="employee" />
                        }
                    </tbody>
                </table>


            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-sm-12">
            <div class="card-deck">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-text">
                            No record yet to be display! <i class="oi oi-dashboard" style="font-size:20px"></i>
                        </h3>
                    </div>
                    <div class="card-body">
                        <h5 class="card-text">
                            Click on the button below to create new record
                            <i class="oi oi-arrow-bottom"></i>
                        </h5>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-sm-12">
                                <a type="button" class="btn btn-outline-secondary w-100" asp-page="Create">
                                    Create new record
                                </a>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
}


