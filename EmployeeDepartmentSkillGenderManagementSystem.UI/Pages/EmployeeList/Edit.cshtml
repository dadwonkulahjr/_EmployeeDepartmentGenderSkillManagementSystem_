@page "{id:int?}"
@model EmployeeDepartmentSkillGenderManagementSystem.UI.Pages.EmployeeList.EditModel
@{
    ViewData["Title"] = "Create new record";
}

<h2 class="display-4" style="font-size:7vw;color:grey">
    Edit Employee<i class="oi oi-pencil" style="font-size:40px"></i>
</h2>
<hr />
<div class="row">
    <div class="col-sm-12">
        <div class="card-deck">
            <div class="card" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
                <div class="card-header">
                    <form method="post">
                        <input hidden="hidden" asp-for="Employee.EmployeeId" />
                        <div class="row form-group">
                            <label class="col-form-label col-md-2" asp-for="Employee.FirstName"></label>
                            <div class="col-sm-10">
                                <input asp-for="Employee.FirstName" class="form-control" placeholder="First Name..." />
                                <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-form-label col-md-2" asp-for="Employee.LastName"></label>
                            <div class="col-sm-10">
                                <input asp-for="Employee.LastName" class="form-control" placeholder="Last Name..." />
                                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-form-label col-md-2" asp-for="Employee.Email"></label>
                            <div class="col-sm-10">
                                <input asp-for="Employee.Email" class="form-control" placeholder="Email..." />
                                <span asp-validation-for="Employee.Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-form-label col-md-2" asp-for="Employee.Salary"></label>
                            <div class="col-sm-10">
                                <input asp-for="Employee.Salary" class="form-control" placeholder="Salary..." />
                                <span asp-validation-for="Employee.Salary" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row form-group">
                            <label class="col-form-label col-md-2" asp-for="Employee.DateHire"></label>
                            <div class="col-sm-10">
                                <input asp-for="Employee.DateHire" class="form-control" />
                                <span asp-validation-for="Employee.DateHire" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row form-group">
                            <label asp-for="Employee.DepartmentId" class="control-label col-md-2"></label>
                            <div class="col-sm-10">
                                <select asp-for="Employee.DepartmentId" class="custom-select" asp-items="ViewBag.DepartmentId">
                                    <option value="">Select department</option>
                                </select>
                                <span class="text-danger" asp-validation-for="Employee.DepartmentId"></span>
                            </div>
                        </div>
                        <div class="row form-group">
                            <label asp-for="Employee.GenderId" class="control-label col-md-2"></label>
                            <div class="col-sm-10">
                                <select asp-for="Employee.GenderId" class="custom-select" asp-items="ViewBag.GenderId">
                                    <option value="">Select gender</option>
                                </select>
                                <span class="text-danger" asp-validation-for="Employee.GenderId"></span>
                            </div>
                        </div>
                        <div class="row form-group">
                            <label asp-for="Employee.SkillId" class="control-label col-md-2"></label>
                            <div class="col-sm-10">
                                <select asp-for="Employee.SkillId" class="custom-select" asp-items="ViewBag.SkillId">
                                    <option value="">Select skill</option>
                                </select>
                                <span class="text-danger" asp-validation-for="Employee.SkillId"></span>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-10">
                                <button class="btn btn-outline-primary" type="submit">Update</button>
                                <a asp-page="/EmployeeList/Index" class="btn btn-outline-secondary">Back</a>
                            </div>
                        </div>
                        @section Scripts{
                            <partial name="_ValidationScriptsPartial" />

                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
